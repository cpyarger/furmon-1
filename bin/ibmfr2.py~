#!/usr/bin/env python
import optparse
import subprocess


def main():
    	p = optparse.OptionParser(description='A unix testbox',
                                            prog='rhcmd.py',
                                            version='rhcme 0.1',
                                            usage= '%prog [option]')
	p = optparse.OptionParser()
	p.add_option('--person', '-p', default="world")
	options, arguments = p.parse_args()
	print 'Hello %s' % options.person

if __name__ == '__main__':
	main()
